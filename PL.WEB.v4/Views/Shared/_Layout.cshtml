<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="~/Content/tableSorter/RStyles.css" rel="stylesheet"/>
</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Application name", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Files
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            @Ajax.ActionLink("Files", "Index", "Home", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                        <li>
                            @Ajax.ActionLink("Shared Files", "Shared", "Home", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                        <li>
                            @Ajax.ActionLink("Recieved Files", "Recieved", "Home", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                    </ul>
                </li>

                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Friends
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            @Ajax.ActionLink("Friends", "FriendList", "Friend", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                        <li>
                            @Ajax.ActionLink("Invites", "Invites", "Friend", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                        <li>
                            @Ajax.ActionLink("Offers", "Offers", "Friend", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                        <li>
                            @Ajax.ActionLink("Search", "Search", "Friend", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                    </ul>
                </li>


                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                        Account
                        <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li>
                            @Ajax.ActionLink("Signup", "Register", "Account", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })
                            @*@Ajax.ActionLink("Signup", "Register", "Account", new AjaxOptions
                            {UpdateTargetId = "results", LoadingElementId = "loading",LoadingElementDuration = 1000,})*@
                        </li>

                        <li>
                            @Ajax.ActionLink("Login", "Login", "Account", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                        <li>
                            @Ajax.ActionLink("Logoff", "LogOff", "Account", new AjaxOptions()
                            {
                                UpdateTargetId = "results"
                            })</li>
                    </ul>
                </li>

            </ul>
            <div>
                <ul class="nav navbar-nav navbar-right">
                    <li style="color: red">
                        @{ string Name = Session["Login"]?.ToString() ?? "Anon"; }


                        @Ajax.ActionLink(Name, "ProfileCustomization", "Account", new AjaxOptions()
                        {
                            UpdateTargetId = "results"
                        })
                        @Ajax.ActionLink("", "Logoff", "Account", new AjaxOptions()
                  {
                      UpdateTargetId = "results"
                  }, new {@class= "glyphicon glyphicon-log-out" })
                    </li>
                </ul>
            </div>
        </div>

    </div>
</div>


<div id="results">


    @RenderBody()

</div>
<div class="container body-content text-center">


    <hr/>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
</div>

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/unobtrusive")
@RenderSection("scripts", required: false)
</body>
</html>